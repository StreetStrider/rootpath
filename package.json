{
	"name":    "@streetstrider/rootpath",
	"version": "1.8.3",

	"description": "pivot for path hierarchy",

	"author":  "Strider <strange.transistor@gmail.com>",
	"license": "ISC",

	"keywords":
	[
		"rootpath", "root", "fs",
		"path", "resolve", "absolute", "relative", "contains",
		"flatten",
		"flow"
	],

	"homepage":            "https://github.com/StreetStrider/rootpath",
	"repository": { "url": "https://github.com/StreetStrider/rootpath.git", "type": "git" },
	"bugs":       { "url": "https://github.com/StreetStrider/rootpath/issues" },

	"engines":
	{
		"node": ">=6"
	},

	"main": "Rootpath",
	"files":
	[
		"Rootpath.js",
		"README.md"
	],

	"metalbox":
	{
		"presets":
		{
			"dev": [ "Library/Dev", { "options": { "targets": "node-first" }} ],
			"npm": [ "Library",     { "options": { "targets": "node-first" }} ]
		}
	},

	"scripts":
	{
		"start":
			"metalbox preset dev",

		"release/dev":
			"metalbox preset dev -1",

		"release":
			"metalbox preset npm",


		".st":
			"eslint",

		"flow":
			"flow check",

		"ts":
			"tsc",

		"types":
			"npm run flow && npm run ts",

		  "unit":                 "mocha    --check-leaks --recursive release/dev/test/",
		".cover": "istanbul cover _mocha -- --check-leaks --recursive tests/",

		".test":
			"npm run st && npm run types && npm run unit",

		"test":
			"npm run release/dev && npm run unit",


		"coveralls":
			"istanbul-coveralls"
	},

	"dependencies":
	{
		"lodash.flattendeep":
			"^4.3",

		"node-path-extras":
			"0.4"
	},
	"devDependencies":
	{
		"metalbox":
			"1.16.0",


		"eslint":
			"^3.12",

		"js-outlander":
			"StrangeTransistor/js-outlander#2.1.1",


		"flow-bin":
			"0.55",

		"typescript":
			"2.5",

		"typescript-helpers":
			"1",


		"mocha":
			"^3",

		"istanbul":
			"^0.4",

		"istanbul-coveralls":
			"^1"
	}
}
